programa
{
/* 	Ex001: Programa para dar boas-vindas ao usuario
	Autor: Robson Silva
*/	
	funcao inicio()
	{
		// Declaração de Variáveis
		cadeia nome // vai guardar o nome do usuario
		// Entrada de Dados
		escreva("Olá, Qual é o seu nome? ")
		leia(nome)
		// Resultados finais
		escreva("Tudo bem, " + nome + "? É um grande prazer te conhecer!")
	}
}
